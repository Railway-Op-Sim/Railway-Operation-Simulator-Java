	<top>
		<VBox fx:id="topVBox" prefHeight="80.0" prefWidth="600.0" BorderPane.alignment="CENTER">
			<children>
				<MenuBar>
					<menus>
						<Menu mnemonicParsing="false" text="File">
							<items>
								<MenuItem mnemonicParsing="false" text="Load Railway" />
