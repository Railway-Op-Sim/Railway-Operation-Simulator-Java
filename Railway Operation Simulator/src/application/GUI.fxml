										<KeyCodeCombination alt="DOWN" code="F4" control="UP" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Mode">
							<items>
								<MenuItem fx:id="buildModifyRailway" mnemonicParsing="false" onAction="#showBuildMenu" text="Build/Modify Railway" />
								<MenuItem mnemonicParsing="false" text="Unspecified Action" />
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Edit">
							<items>
								<MenuItem mnemonicParsing="false" text="Delete" />
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Help">
							<items>
								<MenuItem fx:id="railwayHelpMenuItem" mnemonicParsing="false" onAction="#openHelpWIndow" text="Railway Help">
									<accelerator>
										<KeyCodeCombination alt="UP" code="F1" control="UP" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<MenuItem fx:id="railwayWebsiteMenuItem" mnemonicParsing="false" onAction="#openRailwayWebsite" text="Railway Website" />
								<SeparatorMenuItem mnemonicParsing="false" />
								<MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
							</items>
						</Menu>
					</menus>
				</MenuBar>
			</children>
		</VBox>
	</top>
	<right>
		<VBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="64.0" BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="showHideGridButton" alignment="TOP_LEFT" contentDisplay="TEXT_ONLY" mnemonicParsing="false" onAction="#showGrid" prefHeight="47.0" prefWidth="64.0" text="Show Grid" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS" wrapText="true" />
